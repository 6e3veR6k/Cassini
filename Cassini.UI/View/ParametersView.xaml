<UserControl x:Class="Cassini.UI.View.ParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cassini.UI.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             >
    <Grid Height="60">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>

        <DatePicker
                        Grid.Column="0"
                        Margin="15 14 15 0"
                        Width="110"
                        Height="24"
                        x:Name="First"
                        materialDesign:HintAssist.Hint="Період"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

        <DatePicker
                        Grid.Column="1"
                        Margin="15 14 15 0"
                        Width="110"
                        Height="24"
                        x:Name="Second"
                        materialDesign:HintAssist.Hint="Затвердженні"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

        <ComboBox
                        Grid.Column="2"
                        Margin="10"
                        Width="110"
                        materialDesign:HintAssist.Hint="Статус актів"
                        ItemsSource="{Binding ActStatuses}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Guid"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>

        <ComboBox
                        Grid.Column="3"
                        Margin="10"
                        Width="110"
                        MinWidth="90"
                        materialDesign:HintAssist.Hint="Тип комісії"
                        ItemsSource="{Binding CommissionTypes}"
                        DisplayMemberPath="TypeDefinition"
                        SelectedValuePath="Guid"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}">
            <ComboBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ComboBox.ItemsPanel>
        </ComboBox>

        <materialDesign:PopupBox 
                        Grid.Column="4"
                        Width="40"
                        Height="40"
                        Margin="10,10"
                        VerticalAlignment="Center"
                        StaysOpen="True">
            <materialDesign:PopupBox.ToggleContent>
                <materialDesign:PackIcon
                                Width="24"
                                Height="24"
                                Kind="AccountMultiple" />
            </materialDesign:PopupBox.ToggleContent>
            <Grid
                            Width="420"
                            Margin="8,8,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="8,8,8,16"
                                Style="{StaticResource MaterialDesignTitleTextBlock}">
                                Агентські канали
                </TextBlock>
                <ItemsControl
                                Grid.Column="0"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Grid.IsSharedSizeScope="True"
                                ItemsSource="{Binding Chanels}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="Border">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition SharedSizeGroup="Checkerz" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" Height="40" Margin="8,0">
                                        <CheckBox
                                                        FontSize="12"
                                                        Content="{Binding Code}"
                                                        VerticalAlignment="Center"
                                                        IsChecked="{Binding IsSelected}"
                                                        Style="{StaticResource MaterialDesignActionCheckBox}"
                                                        ToolTip="Канал агента" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="8,8,8,8"
                                                            Orientation="Horizontal">
                                        <TextBlock FontSize="10" Text="{Binding Name}"
                                                               VerticalAlignment="Center"
                                                               TextWrapping="Wrap"
                                                               Width="340"
                                                               Margin="8,0" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter TargetName="Border" Property="Background"
                                                        Value="{DynamicResource MaterialDesignSelection}" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>
        </materialDesign:PopupBox>

        <Button
	                    Width="120"
                        Grid.Column="5"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        ToolTip="Звіт по актам агентів">
            ПЕРЕГЛЯД
        </Button>

        <Button
                        Width="110"
                        Grid.Column="8"
                        IsEnabled="False"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        ToolTip="Resource name: MaterialDesignRaisedAccentButton">
            ЕКСПОРТ
        </Button>
    </Grid>
</UserControl>
